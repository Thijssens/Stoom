{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td><img src ="{{asset(game.thumbnail) }}"></td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ game.link }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ game.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

