{% extends 'base.html.twig' %}

{% block title %}
	Game
{% endblock %}

{% block body %}
	<div class="container">

		<h1>
			My profile
		</h1>
		<img src="{{asset(user.profilepicture) }}">


		<p>
			Username:
			{{ user.username }}
		</p>
		<p>
			email:
			{{ user.email }}
		</p>

		<p>
			gender:
			{{ user.gender }}
		</p>
		<p>
			birthday:
			{{ user.birthday|date('Y-m-d')}}
		</p>


		<a href="{{ path('app_profile_edit') }}">
			edit
		</a>
	</div>

    <div class= "container">
    <h1>My games</h1>
    {% for game in games %}
			<div class="game">
				<div class="game-img">
					<img src="{{asset(game.thumbnail) }}">
				</div>
				<div class="game-data">
					<h2>
						{{game.name}}
					</h2>
					{% if is_granted('ROLE_USER') %}
						<a href="{{ game.link }}" class="styledLink">
							Play Game
						</a>
					{% else %}
						<a href="{{ path('app_login') }}" class="styledLink">
							Login
						</a>
					{% endif %}
				</div>
				<div class="game-controls">
					{% if user is defined %} 
						{% if is_granted('ROLE_USER') %}
							<a href="{{ path('app_game_show', {'id': game.id}) }}" class="button">
								show
							</a>
						{% endif %}

						{% if is_granted('ROLE_ADMIN') or game.owner == user.id %}
							<a href="{{ path('app_game_edit', {'id': game.id}) }}" class="button">
								edit
							</a>
						{% endif %}

					{% endif %}

				</div>
			</div>


		{% else %}

			<p>
				no records found
			</p>

		{% endfor %}

    
    </div>
	{# {{ include('game/_delete_form.html.twig') }} #}
{% endblock %}
